{
    "trailingComma": "all",
    "tabWidth": 4,
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "printWidth": 120,
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "tabWidth": 2,
                "printWidth": 140
            }
        }
    ]
}
